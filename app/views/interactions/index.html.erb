<p id="notice"><%= notice %></p>

<h1>Listing Interactions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Interaction type</th>
      <th>Date</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interactions.each do |interaction| %>
      <tr>
        <td><%= interaction.name %></td>
        <td><%= interaction.interactions_type.name %></td>
        <td><%= interaction.date.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= interaction.comments %></td>
        <td><%= link_to 'Show', interaction %></td>
        <td><%= link_to 'Edit', edit_interaction_path(interaction) %></td>
        <td><%= link_to 'Destroy', interaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

